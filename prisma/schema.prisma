generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Message {
  id        String   @id @default(cuid())
  content   String   @db.VarChar(255)
  createdAt DateTime @default(now())
  authorId  String

  @@index([authorId])
}

model User {
  id        String   @id
  clerkId   String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime

  @@index([clerkId])
}
